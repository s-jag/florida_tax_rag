# =============================================================================
# Development Environment Configuration
# =============================================================================
# This file contains development-specific settings.
# API keys should be set in your local .env file, not here.
# =============================================================================

# Environment
ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Local services (Docker Compose defaults)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
WEAVIATE_URL=http://localhost:8080
REDIS_URL=redis://localhost:6379/0

# Retrieval (same as production for consistency)
RETRIEVAL_TOP_K=20
HYBRID_ALPHA=0.25
EXPAND_GRAPH=true
MAX_GRAPH_HOPS=2

# Generation
LLM_MODEL=claude-sonnet-4-20250514
LLM_TEMPERATURE=0.1
MAX_TOKENS=4096
LLM_TIMEOUT=60

# Rate limits (relaxed for development)
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# Staging Environment Configuration
# =============================================================================
# This file contains staging-specific settings.
# API keys should be set via environment variables or secrets management.
# =============================================================================

# Environment
ENV=staging
DEBUG=false
LOG_LEVEL=INFO

# Services (update with staging infrastructure)
# NEO4J_URI=bolt://staging-neo4j:7687
# WEAVIATE_URL=http://staging-weaviate:8080
# REDIS_URL=redis://staging-redis:6379/0

# Retrieval
RETRIEVAL_TOP_K=20
HYBRID_ALPHA=0.25
EXPAND_GRAPH=true
MAX_GRAPH_HOPS=2

# Generation
LLM_MODEL=claude-sonnet-4-20250514
LLM_TEMPERATURE=0.1
MAX_TOKENS=4096
LLM_TIMEOUT=60

# Rate limits (standard)
RATE_LIMIT_PER_MINUTE=60
